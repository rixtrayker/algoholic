# Algoholic Environment Variables
# Copy this file to .env and update with your values
# All variables are prefixed with ALGOHOLIC_

# Application
ALGOHOLIC_APP_NAME="Algoholic API"
ALGOHOLIC_APP_VERSION="1.0.0"
ALGOHOLIC_APP_ENVIRONMENT=development
ALGOHOLIC_APP_DEBUG=true

# Server
ALGOHOLIC_SERVER_HOST=0.0.0.0
ALGOHOLIC_SERVER_PORT=4000
ALGOHOLIC_SERVER_READ_TIMEOUT=30
ALGOHOLIC_SERVER_WRITE_TIMEOUT=30
ALGOHOLIC_SERVER_SHUTDOWN_TIMEOUT=10

# Database
ALGOHOLIC_DATABASE_HOST=localhost
ALGOHOLIC_DATABASE_PORT=5432
ALGOHOLIC_DATABASE_USER=leetcode
ALGOHOLIC_DATABASE_PASSWORD=leetcode123
ALGOHOLIC_DATABASE_DATABASE=leetcode_training
ALGOHOLIC_DATABASE_SSLMODE=disable
ALGOHOLIC_DATABASE_MAX_OPEN_CONNS=25
ALGOHOLIC_DATABASE_MAX_IDLE_CONNS=5
ALGOHOLIC_DATABASE_CONN_MAX_LIFETIME=30
ALGOHOLIC_DATABASE_LOG_LEVEL=warn
ALGOHOLIC_DATABASE_AUTO_MIGRATE=false

# Redis
ALGOHOLIC_REDIS_ENABLED=false
ALGOHOLIC_REDIS_HOST=localhost
ALGOHOLIC_REDIS_PORT=6379
ALGOHOLIC_REDIS_PASSWORD=
ALGOHOLIC_REDIS_DB=0
ALGOHOLIC_REDIS_TTL=3600

# ChromaDB
ALGOHOLIC_CHROMADB_URL=http://localhost:8000
ALGOHOLIC_CHROMADB_TIMEOUT=30
ALGOHOLIC_CHROMADB_BATCH_SIZE=100

# Ollama
ALGOHOLIC_OLLAMA_URL=http://localhost:11434
ALGOHOLIC_OLLAMA_TIMEOUT=120
ALGOHOLIC_OLLAMA_ASSESSMENT_MODEL=mistral:7b
ALGOHOLIC_OLLAMA_GENERATION_MODEL=codellama:13b
ALGOHOLIC_OLLAMA_EMBEDDING_MODEL=all-minilm
ALGOHOLIC_OLLAMA_TEMPERATURE=0.7
ALGOHOLIC_OLLAMA_ASSESSMENT_TEMP=0.3
ALGOHOLIC_OLLAMA_GENERATION_TEMP=0.8
ALGOHOLIC_OLLAMA_MAX_TOKENS=2048
ALGOHOLIC_OLLAMA_CONTEXT_WINDOW=4096

# RAG
ALGOHOLIC_RAG_ENABLED=true
ALGOHOLIC_RAG_TOP_K=5
ALGOHOLIC_RAG_MIN_SIMILARITY=0.7
ALGOHOLIC_RAG_MAX_CONTEXT_LENGTH=4000
ALGOHOLIC_RAG_RETRIEVAL_STRATEGY=semantic
ALGOHOLIC_RAG_RERANKING_ENABLED=false

# Authentication
ALGOHOLIC_AUTH_ENABLED=false
ALGOHOLIC_AUTH_JWT_SECRET=change-me-in-production
ALGOHOLIC_AUTH_JWT_EXPIRY=24
ALGOHOLIC_AUTH_REFRESH_EXPIRY=168
ALGOHOLIC_AUTH_BCRYPT_COST=10
ALGOHOLIC_AUTH_SESSION_DURATION=24

# Logging
ALGOHOLIC_LOGGING_LEVEL=info
ALGOHOLIC_LOGGING_FORMAT=json
ALGOHOLIC_LOGGING_OUTPUT=stdout
ALGOHOLIC_LOGGING_FILE_PATH=logs/app.log
ALGOHOLIC_LOGGING_MAX_SIZE=100
ALGOHOLIC_LOGGING_MAX_BACKUPS=5
ALGOHOLIC_LOGGING_MAX_AGE=30
ALGOHOLIC_LOGGING_COMPRESS=true
